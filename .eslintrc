{
	"env": {
		"browser": true
	},
	"rules": {
		"eqeqeq": 0,
		"no-unused-vars": [2, {"vars": "local"}],
		"no-use-before-define": [2, "nofunc"],
		"no-nested-ternary": 2,
		"quotes": 0,
		"no-multi-str": 0,
		"no-inner-declarations": [2, "both"],
		"no-trailing-space": 0
	},
	"globals": {
		"GM_addStyle": false,
		"console": false,
		"marked": false,
		"$": false,
		"GM_xmlhttpRequest": false
	}
}
